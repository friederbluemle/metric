<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp" >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="12dp"
        android:paddingTop="12dp"
        android:text="Convert feet to meter"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <View
        android:id="@+id/separator"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_below="@+id/title"
        android:layout_marginBottom="12dp"
        android:background="#44000000" />

    <EditText
        android:id="@+id/feet_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/separator"
        android:layout_below="@id/separator"
        android:layout_toLeftOf="@+id/convert_button"
        android:ems="10"
        android:hint="Feet"
        android:inputType="numberDecimal" />

    <ImageButton
        android:id="@+id/convert_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignBottom="@+id/feet_edit_text"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/feet_edit_text"
        android:background="@android:drawable/list_selector_background"
        android:src="@drawable/convert" />

    <TextView
        android:id="@+id/result_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/feet_edit_text"
        android:padding="12dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>